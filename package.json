{
  "name": "bundle-snitch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bundlewatch": "^0.4.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "typescript": "^5"
  },
  "nextBundleAnalysis": {
    "budget": 307200,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  },
  "bundlewatch" : {
    "files": [
      {
        "path": ".next/static/chunks/*.js",
        "maxSize": "250kB"
      }
    ],
    "ci": {
      "trackBranches": ["main"],
      "repoOwner": "harshpathakzz",
      "repoName": "bundle-snitch"
      
    }
  }
}